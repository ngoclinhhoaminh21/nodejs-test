{
  "name": "linked-site-api",
  "version": "1.0.0",
  "description": "Linked Site API",
  "main": "handler.js",
  "private": true,
  "scripts": {
    "lint": "eslint main.ts \"{src,testHelpers}/**/*.ts\"",
    "lint:fix": "yarn lint --fix",
    "jest": "TZ=UTC jest",
    "test": "NODE_OPTIONS='--max_old_space_size=8192' TZ=UTC jest --runInBand --forceExit --testTimeout=300000",
    "generate-schema": "ts-node ./src/scripts/generateSchema.ts && ts-node ./src/scripts/generateSubbyAppSchema.ts && ts-node ./src/scripts/generatePublicSchema.ts && ts-node ./src/scripts/generateSchemaAdmin.ts",
    "ci": "yarn install --frozen-lockfile && yarn lint && yarn test",
    "serverless": "serverless",
    "dev": "sls offline start --disableCookieValidation --httpPort 3010 --lambdaPort 4010 --useChildProcesses",
    "migrate-create": " typeorm migration:create -n",
    "mc": " typeorm migration:create -n",
    "migrate-run": "ts-node ./node_modules/typeorm/cli.js migration:run",
    "migrate-revert": "ts-node ./node_modules/typeorm/cli.js migration:revert",
    "entity": "typeorm entity:create -n"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "eslint --fix --ext .ts,.js"
    ],
    "testHelpers/**/*.{js,ts}": [
      "eslint --fix --ext .ts,.js"
    ]
  },
  "devDependencies": {
    "@types/ejs": "^3.1.0",
    "@types/graphql-iso-date": "^3.4.0",
    "@types/jest": "^27.4.0",
    "@types/lodash": "4.14.178",
    "@types/node": "^17.0.10",
    "@types/nodemailer": "^6.4.4",
    "@types/string-similarity": "^4.0.0",
    "@types/webpack-env": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "amazon-cognito-identity-js": "^4.3.1",
    "aws-sdk": "^2.1062.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "faker": "^4.1.0",
    "husky": "7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "serverless": "2.72.4",
    "serverless-offline": "^8.3.1",
    "serverless-plugin-scripts": "^1.0.2",
    "serverless-pseudo-parameters": "^2.6.1",
    "serverless-webpack": "5.5.1",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.6",
    "ts-node": "8.8.1",
    "typeorm-factory": "^0.0.14",
    "typescript": "^3.8.3",
    "webpack": "5.38.1",
    "webpack-node-externals": "^3.0.0",
    "exceljs": "^4.3.0"
  },
  "dependencies": {
    "@sentry/node": "5.16.1",
    "@types/faker": "^6.6.9",
    "apollo-server-lambda": "2.25.3",
    "aws-lambda": "^1.0.7",
    "class-validator": "0.13.2",
    "csvtojson": "^2.0.10",
    "date-fns": "^2.28.0",
    "date-fns-tz": "^1.2.2",
    "ejs": "^3.1.6",
    "graphql": "15.8.0",
    "graphql-iso-date": "^3.6.1",
    "graphql-type-json": "^0.3.2",
    "handlebars": "^4.7.7",
    "ioredis": "4.28.3",
    "lodash": "^4.17.21",
    "mssql": "7.3.5",
    "node-fetch": "2.6.0",
    "nodemailer": "^6.7.2",
    "reflect-metadata": "^0.1.13",
    "serverless-api-compression": "^1.0.1",
    "serverless-local-schedule": "^0.1.7",
    "string-similarity": "^4.0.4",
    "type-graphql": "1.1.1",
    "typedi": "0.8.0",
    "typeorm": "0.2.45",
    "typeorm-typedi-extensions": "0.4.1",
    "uuid": "^8.3.2"
  }
}
